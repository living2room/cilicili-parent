<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.cilicili.user.mapper.user.UsersMessageMapper">
	<select id="findByUserName" resultMap="BaseResultMap">
		select * from
		tb_u_users_message where user_name = #{userName}
	</select>
	<update id="upUsersMessage"
		parameterType="com.cilicili.user.domain.user.UsersMessage">
		update tb_u_users_message
		<set>
			<if test="phone != null">
				phone = #{phone},
			</if>
			<if test="sex != 0">
				sex = #{sex}
			</if>
			<if test="home != 0">
				home = #{home}
			</if>
			<if test="age != 0">
				age = #{age}
			</if>
		</set>
		where user_name = #{userName}
	</update>

	<resultMap id="BaseResultMap"
		type="com.cilicili.user.domain.user.UsersMessage">
		<id column="user_id" jdbcType="VARCHAR" property="userId" />
		<result column="user_name" jdbcType="VARCHAR"
			property="userName" />
		<result column="phone" jdbcType="VARCHAR" property="phone" />
		<result column="sex" jdbcType="INTEGER" property="sex" />
		<result column="home" jdbcType="VARCHAR" property="home" />
		<result column="age" jdbcType="INTEGER" property="age" />
		<result column="create_time" jdbcType="TIMESTAMP"
			property="createTime" />
		<result column="last_login_time" jdbcType="TIMESTAMP"
			property="lastLoginTime" />
		<result column="id_card" jdbcType="VARCHAR" property="idCard" />
		<result column="qq" jdbcType="INTEGER" property="qq" />
		<result column="img_url" jdbcType="VARCHAR" property="imgUrl" />
	</resultMap>

</mapper>