<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cilicili.user.mapper.user.UsersMapper">
	
	<select id="findByUserName"  resultMap="BaseResultMap">
	   select * from tb_u_users where user_name = #{userName}
	</select>
	
	<select id="findByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
	     select * from tb_u_users where email = #{email}
	</select>
	
	<insert id="addUser" parameterType="com.cilicili.user.domain.user.Users">
	    insert into tb_u_users (user_id,user_name,user_password,salt,email) values (#{userId},#{userName},#{userPassword},#{salt},#{email})
	</insert>
	
	<!-- 根据user_id查当前用户的所有角色及角色的所有权限 -->
	<select id="findByUserId"  resultMap="BaseResultMap">
	   select * from tb_u_users where user_name = #{userName}
	</select>
	
	
	
	<resultMap id="BaseResultMap" type="com.cilicili.user.domain.user.Users">
		<id column="user_id" jdbcType="VARCHAR" property="userId" />
		<result column="user_name" jdbcType="VARCHAR"
			property="userName" />
		<result column="user_password" jdbcType="VARCHAR"
			property="userPassword" />			
		<result column="locked" jdbcType="INTEGER" property="locked" />
		<result column="salt" jdbcType="VARCHAR" property="salt" />
		<result column="email" jdbcType="VARCHAR" property="email" />
		<result column="phone" jdbcType="VARCHAR" property="phone" />
		<result column="sex" jdbcType="INTEGER" property="sex" />
		<result column="age" jdbcType="INTEGER" property="age" />
		<result column="status" jdbcType="INTEGER" property="status" />
		<result column="create_time" jdbcType="TIMESTAMP"
			property="createTime" />
		<result column="update_time" jdbcType="TIMESTAMP"
			property="updateTime" />
		<result column="last_login_time" jdbcType="TIMESTAMP"
			property="lastLoginTime" />
		<!-- <collection property=""></collection> -->
	</resultMap>
	
</mapper>